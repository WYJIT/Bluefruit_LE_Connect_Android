<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adafruit.bluefruit.le.connect.Login.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="@string/select_one"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/login_patient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:backgroundTint="#16a085"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:text="@string/patient"
            android:textColor="#ecf0f1"/>

        <Button
            android:id="@+id/login_therapist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_patient_button"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:backgroundTint="#2980b9"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:text="@string/therapist"
            android:textColor="#ecf0f1"/>
    </RelativeLayout>

</RelativeLayout>
