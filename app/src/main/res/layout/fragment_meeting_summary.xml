<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#262626">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#f2f2f2"
            android:textSize="20dp"
            android:text="Wilson" />


        <TextView
            android:id="@+id/gender"
            android:layout_below="@id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="male"/>

        <TextView
            android:id="@+id/age"
            android:layout_below="@id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="63 years old"/>

        <TextView
            android:id="@+id/weight"
            android:layout_below="@id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="152 lbs"/>

        <TextView
            android:id="@+id/height"
            android:layout_below="@id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="5 feet 7 inches"/>


        <EditText
            android:id="@+id/injury"
            android:layout_below="@id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="Knee unable to extend past 20 degrees, assist required to stand, pt. Tolerated a 30 minute session of pressure treatment before crying, reduced swelling in
"/>

        <TextView
            android:id="@+id/progress"
            android:layout_below="@id/injury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="Progress"/>

        <ImageView
            android:id="@+id/progress_image"
            android:layout_below="@id/progress"
            android:layout_width="204dp"
            android:layout_height="144dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/improvement"/>

        <TextView
            android:id="@+id/exercises"
            android:layout_below="@id/progress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="Exercises"/>

        <ListView
            android:id="@+id/patient_exercise_list"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exercises"
            android:textColor="#f2f2f2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </ListView>


        <Button
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="More Info"
            android:layout_below="@id/patient_exercise_list"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#262626"
            android:textColor="#0099ff"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>

</ScrollView>


