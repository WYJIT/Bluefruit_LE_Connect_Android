<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context="com.adafruit.bluefruit.le.connect.Patient.ExerciseSummaryFragment">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#f2f2f2"
        android:text="Straight leg raises" />

    <TextView
        android:id="@+id/rep_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/exercise_name"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="#f2f2f2"
        android:text="rep 1/10, set 2/3" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/exercise_name"
        android:layout_marginTop="15dp"
        android:src="@drawable/leg_raise"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:background="#404040"
        android:padding="15dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#f2f2f2"
            android:textSize="17dp"
            android:text="Status"/>

        <TextView
            android:id="@+id/details2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#f2f2f2"
            android:textSize="15dp"
            android:text="Slow down! "/>
    </RelativeLayout>

    <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:text="Finish"
        android:backgroundTint="#262626"
        android:textColor="#0099ff"/>


</RelativeLayout>
