<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#262626">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#f2f2f2"
        android:textSize="20dp"
        android:text="Muscle group: Quadriceps" />


    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/exercise_name"
        android:textColor="#f2f2f2"
        android:textSize="18dp"
        android:text="Squats" />

    <TextView
        android:id="@+id/reps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/name_text"
        android:textColor="#f2f2f2"
        android:textSize="16dp"
        android:text="Adherence rate: 80%" />

    <TextView
        android:id="@+id/sets_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/reps_text"
        android:textColor="#f2f2f2"
        android:textSize="16dp"
        android:text="Confusion: minimal" />

    <TextView
        android:id="@+id/notes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/sets_text"
        android:textColor="#f2f2f2"
        android:textSize="18dp"
        android:text="Effectiveness: very" />


</RelativeLayout>