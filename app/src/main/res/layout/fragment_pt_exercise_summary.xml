<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="Bicep curls" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/exercise_name"
        android:layout_marginTop="10dp"
        android:src="@drawable/exercise"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/exercise_name"
        android:textSize="18dp"
        android:text="Trent Dye" />

    <EditText
        android:id="@+id/reps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/name_text"
        android:textSize="16dp"
        android:text="Reps: 3" />

    <EditText
        android:id="@+id/sets_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/reps_text"
        android:textSize="16dp"
        android:text="Sets: 2" />

    <TextView
        android:id="@+id/notes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/sets_text"
        android:textSize="18dp"
        android:text="Other notes:" />

    <EditText
        android:id="@+id/notes_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/notes_text"
        android:textSize="16dp"
        android:text="Alternate arms" />


    <TextView
        android:id="@+id/improvement_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/notes_edit_text"
        android:textSize="18dp"
        android:text="Improvement" />

    <ImageView
        android:id="@+id/improvement_image"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/improvement_text"
        android:layout_marginTop="15dp"
        android:src="@drawable/improvement"/>

    <Button
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/improvement_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:text="Record"
        android:backgroundTint="#16a085"
        android:textColor="#ecf0f1"/>

</RelativeLayout>