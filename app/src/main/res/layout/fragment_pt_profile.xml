<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/person"/>
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_pic"
        android:layout_alignTop="@id/profile_pic"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="Dr. Wilson Tang"/>

    <TextView
        android:id="@+id/practice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text"
        android:layout_toRightOf="@id/profile_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Pysical Therapists, Inc."/>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:text="Number of compliant patients"/>

    <ImageView
        android:id="@+id/progress_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/progress_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/progress_graph"/>

    <TextView
        android:id="@+id/number_of_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_image"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="- Total number of patients: 15"/>

    <TextView
        android:id="@+id/number_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_patients"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="- Percentage showing progress: 93%"/>


</RelativeLayout>